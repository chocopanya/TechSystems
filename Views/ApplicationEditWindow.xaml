<Window x:Class="TechSystems.Views.ApplicationEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Заявка на подключение" Height="550" Width="650"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Клиент -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Клиент:" 
                   FontWeight="Bold" Margin="0,5,10,5"/>
        <ComboBox Grid.Row="0" Grid.Column="1" x:Name="cmbClient" 
                  DisplayMemberPath="FullName" Height="30" Margin="0,5,0,5"/>

        <!-- Тариф -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Тариф:" 
                   FontWeight="Bold" Margin="0,5,10,5"/>
        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="cmbTariff" 
                  DisplayMemberPath="Name" Height="30" Margin="0,5,0,5"/>

        <!-- Информация о тарифе -->
        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                Background="#F0F8FF" CornerRadius="5" Padding="10" Margin="0,5,0,10">
            <StackPanel>
                <TextBlock x:Name="txtTariffInfo" Text="Выберите тариф для отображения информации" 
                           FontSize="12" TextWrapping="Wrap"/>
                <TextBlock x:Name="txtTariffLicenses" Text="" FontSize="12" FontWeight="Bold"
                           Foreground="Green" Margin="0,5,0,0"/>
                <TextBlock x:Name="txtTariffPrice" Text="" FontSize="12" Margin="0,2,0,0"/>
            </StackPanel>
        </Border>

        <!-- Количество лицензий -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Количество лицензий:" 
                   FontWeight="Bold" Margin="0,5,10,5"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtLicenseCount" 
                 Text="1" Height="30" Margin="0,5,0,5"/>

        <!-- Статус -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Статус:" 
                   FontWeight="Bold" Margin="0,5,10,5"/>
        <ComboBox Grid.Row="4" Grid.Column="1" x:Name="cmbStatus" 
                  Height="30" Margin="0,5,0,5">
            <ComboBoxItem Content="Новая" Tag="1"/>
            <ComboBoxItem Content="В обработке" Tag="2"/>
            <ComboBoxItem Content="Подтверждена" Tag="3"/>
            <ComboBoxItem Content="Отменена" Tag="4"/>
            <ComboBoxItem Content="Завершена" Tag="5"/>
        </ComboBox>

        <!-- Итоговая стоимость -->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Итоговая стоимость:" 
                   FontWeight="Bold" Margin="0,5,10,5"/>
        <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtTotalCost" 
                 Height="30" Margin="0,5,0,5" IsReadOnly="True"
                 Background="#F5F5F5"/>

        <!-- Комментарий -->
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Комментарий:" 
                   FontWeight="Bold" Margin="0,5,10,5"/>
        <TextBox Grid.Row="6" Grid.Column="1" x:Name="txtComment" 
                 Height="100" Margin="0,5,0,5" AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"/>

        <!-- Панель кнопок -->
        <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <Button x:Name="btnSave" Content="Сохранить" 
                    Width="100" Height="35" Margin="5"
                    Background="#4CAF50" Foreground="White"
                    FontWeight="Bold" Click="BtnSave_Click"/>
            <Button x:Name="btnCancel" Content="Отмена" 
                    Width="100" Height="35" Margin="5"
                    Background="#9E9E9E" Foreground="White"
                    FontWeight="Bold" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>