<Window x:Class="TechSystems.Views.ApplicationDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Детали заявки" Height="500" Width="600"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Номер заявки -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Номер заявки:" 
                   FontWeight="Bold" Margin="0,5,10,5"/>
        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtId" 
                   FontSize="14" Margin="0,5,0,5"/>

        <!-- Клиент -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Клиент:" 
                   FontWeight="Bold" Margin="0,5,10,5"/>
        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtClient" 
                   FontSize="14" Margin="0,5,0,5"/>

        <!-- Тариф -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Тариф:" 
                   FontWeight="Bold" Margin="0,5,10,5"/>
        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtTariff" 
                   FontSize="14" Margin="0,5,0,5"/>

        <!-- Дата заявки -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Дата заявки:" 
                   FontWeight="Bold" Margin="0,5,10,5"/>
        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtDate" 
                   FontSize="14" Margin="0,5,0,5"/>

        <!-- Статус -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Статус:" 
                   FontWeight="Bold" Margin="0,5,10,5"/>
        <TextBlock Grid.Row="4" Grid.Column="1" x:Name="txtStatus" 
                   FontSize="14" FontWeight="Bold" Margin="0,5,0,5"/>

        <!-- Количество лицензий -->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Количество лицензий:" 
                   FontWeight="Bold" Margin="0,5,10,5"/>
        <TextBlock Grid.Row="5" Grid.Column="1" x:Name="txtLicenseCount" 
                   FontSize="14" Margin="0,5,0,5"/>

        <!-- Итоговая стоимость -->
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Итоговая стоимость:" 
                   FontWeight="Bold" Margin="0,5,10,5"/>
        <TextBlock Grid.Row="6" Grid.Column="1" x:Name="txtTotalCost" 
                   FontSize="14" FontWeight="Bold" Foreground="Green" 
                   Margin="0,5,0,5"/>

        <!-- Комментарий -->
        <TextBlock Grid.Row="7" Grid.Column="0" Text="Комментарий:" 
                   FontWeight="Bold" Margin="0,5,10,5"/>
        <Border Grid.Row="7" Grid.Column="1" 
                BorderBrush="#CCCCCC" BorderThickness="1" 
                Background="#F9F9F9" CornerRadius="3" Padding="5">
            <TextBlock x:Name="txtComment" 
                       TextWrapping="Wrap" 
                       VerticalAlignment="Top"/>
        </Border>

        <!-- Панель кнопок -->
        <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <Button x:Name="btnClose" Content="Закрыть" 
                    Width="100" Height="35" Margin="5"
                    Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>