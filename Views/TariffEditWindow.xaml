<Window x:Class="TechSystems.Views.TariffEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление/редактирование тарифа" 
        Height="550" Width="650"
        WindowStartupLocation="CenterOwner"
        MinWidth="500" MinHeight="450"
        ResizeMode="CanResize">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Левая колонка - изображение -->
        <Border Grid.Column="0" Grid.RowSpan="10" 
                BorderBrush="#CCCCCC" BorderThickness="2" 
                Background="#F5F5F5"
                Width="200" Height="250">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Фото тарифа" 
                           Grid.Row="0" 
                           HorizontalAlignment="Center"
                           FontWeight="Bold" FontSize="14"
                           Margin="0,5,0,5"/>

                <!-- Область изображения -->
                <Border Grid.Row="1" 
                        BorderBrush="#999999" BorderThickness="1"
                        Background="White" Margin="5"
                        CornerRadius="3">
                    <Grid>
                        <Image x:Name="imgTariff" 
                               Stretch="Uniform"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               MaxWidth="180" MaxHeight="180"/>

                        <TextBlock x:Name="txtNoPhoto" 
                                   Text="Нет фото"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="#999999"
                                   FontSize="12"
                                   Visibility="Visible"/>
                    </Grid>
                </Border>

                <!-- Кнопки управления изображением -->
                <StackPanel Grid.Row="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0,5,0,5">
                    <Button x:Name="btnLoadImage" 
                            Content="Загрузить"
                            Width="80" Height="25"
                            Background="#2196F3" Foreground="White"
                            Click="BtnLoadImage_Click"/>

                    <Button x:Name="btnClearImage" 
                            Content="Очистить"
                            Width="80" Height="25"
                            Margin="5,0,0,0"
                            Background="#9E9E9E" Foreground="White"
                            Click="BtnClearImage_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Правая колонка -->
        <StackPanel Grid.Column="2" Grid.Row="0">
            <TextBlock Text="Название тарифа:" FontWeight="Bold"/>
            <TextBox x:Name="txtName" Height="30" Margin="0,2,0,5"/>
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="1">
            <TextBlock Text="Тип услуги:" FontWeight="Bold"/>
            <ComboBox x:Name="cmbServiceType" Height="30" Margin="0,2,0,5"/>
        </StackPanel>

        <Grid Grid.Column="2" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Срок подписки (месяцев):" FontWeight="Bold"/>
                <TextBox x:Name="txtSubscriptionMonths" Text="12" Height="30" Margin="0,2,0,5"/>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <TextBlock Text="Дата начала:" FontWeight="Bold"/>
                <DatePicker x:Name="dpStartDate" Height="30" Margin="0,2,0,5"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="2" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Базовая стоимость (руб.):" FontWeight="Bold"/>
                <TextBox x:Name="txtPrice" Height="30" Margin="0,2,0,5"/>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <TextBlock Text="Скидка (%):" FontWeight="Bold"/>
                <TextBox x:Name="txtDiscount" Text="0" Height="30" Margin="0,2,0,5"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="2" Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Лимит пользователей:" FontWeight="Bold"/>
                <TextBox x:Name="txtUserLimit" Height="30" Margin="0,2,0,5"/>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <TextBlock Text="Доступных лицензий:" FontWeight="Bold"/>
                <TextBox x:Name="txtAvailableLicenses" Height="30" Margin="0,2,0,5"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Column="2" Grid.Row="5">
            <TextBlock Text="Описание:" FontWeight="Bold"/>
            <TextBox x:Name="txtDescription" Height="60" Margin="0,2,0,5"
                     AcceptsReturn="True" TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <!-- Итоговая цена -->
        <Border Grid.Column="2" Grid.Row="6" 
                Background="#E8F5E9" 
                CornerRadius="5" 
                Padding="10"
                Margin="0,5,0,10">
            <TextBlock x:Name="txtFinalPrice" 
                       Text="0 руб." 
                       FontSize="14" FontWeight="Bold"
                       Foreground="#388E3C"/>
        </Border>

        <!-- Информация о спецпредложении -->
        <Border x:Name="specialOfferBorder" Grid.Column="2" Grid.Row="7" 
                Background="#FFF3E0" 
                CornerRadius="5" 
                Padding="10"
                Margin="0,0,0,10"
                Visibility="Collapsed">
            <TextBlock Text="СПЕЦПРЕДЛОЖЕНИЕ!" 
                       FontSize="12" FontWeight="Bold"
                       Foreground="#FF9800"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Column="2" Grid.Row="10" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="btnSave" 
                    Content="Сохранить" 
                    Width="100" Height="35"
                    Background="#4CAF50" Foreground="White"
                    FontSize="14" FontWeight="Bold"
                    Click="BtnSave_Click"/>

            <Button x:Name="btnCancel" 
                    Content="Отмена" 
                    Width="100" Height="35"
                    Background="#9E9E9E" Foreground="White"
                    FontSize="14" FontWeight="Bold"
                    Margin="10,0,0,0"
                    Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>