<Window x:Class="TechSystems.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход - ТехноСистемы" 
        Height="350" Width="350"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="ТехноСистемы" 
                       HorizontalAlignment="Center" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="#2196F3" Margin="0,0,0,20"/>

            <TextBlock Text="Аренда программного обеспечения" 
                       HorizontalAlignment="Center" 
                       FontSize="14" Foreground="#666666" 
                       Margin="0,0,0,30"/>

            <RadioButton x:Name="rbGuest" Content="Гостевой доступ" 
                         GroupName="Mode" IsChecked="True" 
                         FontSize="14" Margin="0,0,0,10"/>

            <RadioButton x:Name="rbManager" Content="Вход для менеджера/администратора" 
                         GroupName="Mode" FontSize="14" Margin="0,0,0,20"/>

            <!-- Поля для менеджера -->
            <StackPanel x:Name="ManagerPanel" Visibility="Collapsed" Margin="0,10,0,20">
                <TextBlock Text="Логин:" FontSize="14"/>
                <TextBox x:Name="txtLogin" FontSize="14" Height="30" Margin="0,0,0,10"/>

                <TextBlock Text="Пароль:" FontSize="14"/>
                <PasswordBox x:Name="txtPassword" FontSize="14" Height="25"/>
            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="btnLogin" Content="Войти" 
                        Width="100" Height="35" Margin="5"
                        Background="#4CAF50" Foreground="White"
                        FontWeight="Bold" Click="BtnLogin_Click"/>

                <Button x:Name="btnExit" Content="Выход" 
                        Width="100" Height="35" Margin="5"
                        Background="#F44336" Foreground="White"
                        FontWeight="Bold" Click="BtnExit_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>